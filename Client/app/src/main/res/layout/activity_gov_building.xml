<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gov_place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="Government Building"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gov_place_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gov_place_name"
        android:layout_marginTop="6dp"
        android:text="Lauder School of Government, Diplomacy, and Strategy"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/backButtonGov"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/black"
        android:text="@string/back"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</RelativeLayout>
